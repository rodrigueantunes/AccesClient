<Window x:Class="AccesClientWPF.Views.UpdateInProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mise à jour en cours"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#EAEDED"
        ShowInTaskbar="False">
    <Border Background="White" CornerRadius="10" Padding="18" Width="520">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Mise à jour en cours"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#34495E"/>

            <TextBlock Grid.Row="1"
                       Margin="0,10,0,14"
                       Text="Une mise à jour est déjà en cours sur ce poste.
Voulez-vous attendre la fin, ou annuler la mise à jour ?"
                       TextWrapping="Wrap"
                       Foreground="#34495E"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annuler"
                        Width="110"
                        Height="36"
                        Margin="0,0,10,0"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Cancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Attendre"
                        Width="110"
                        Height="36"
                        Background="#5DADE2"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Wait_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>